<form action = '/figures/<%=@figure.id%>' method = 'post'>
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Name <input type = "text" name = "figure[name]" id = "figure_name" value = "<%=@figure.name%>"><h2>
  <h2>Titles</h2>

      <% @titles.each do |title|%>
        <input
          id = "title_<%=title.id%>"
          type = "checkbox"
          name = "figure[title_ids][]"
          value = "<%=title.id%>"
          <%='checked' if @figure.titles.include?(title)%>
        ><%=title.name%><br>
      <%end%>
    <br>
    <h2>Create New Title:</h2>
    <input type = "text" name = "title[name]" id = "new_title">
    <br>

    <h2>Landmarks</h2>

        <% @landmarks.each do |landmark|%>
          <input
            id = "landmark_<%=landmark.id%>"
            type = "checkbox"
            name = "figure[landmark_ids][]"
            value = "<%=landmark.id%>"
            <%='checked' if @figure.landmarks.include?(landmark)%>
          ><%=landmark.name%><br>
        <%end%>
      <br>
      <h2>Create New Landmark:</h2>
      <h3>
        Name: <input type = "text" name = "landmark[name]" id = "new_landmark">
        Year:<input type = "text" name = "landmark[year_completed]" id = "landmark_year">
        <input type= "submit" id = "edit_figure" value = "Edit Figure">
      <h3>

</form>
